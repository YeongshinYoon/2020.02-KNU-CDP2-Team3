<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="세계 현황">
            </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="확진환자">
                    </TextView>

                    <TextView
                        android:id="@+id/world_confirm"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/world_confirm_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="사망자">
                    </TextView>

                    <TextView
                        android:id="@+id/world_death"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/world_death_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/update_time_world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="세계현황 ----.--.--. --:-- 집계 기준">
            </TextView>

            <View
                android:layout_marginTop="20dp"
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="국내 현황">
            </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="확진환자">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_confirm"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_confirm_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="격리중">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_cur_confirm"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_cur_confirm_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="격리해제">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_recovered"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_recovered_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="사망자">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_death"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="-">
                    </TextView>

                    <TextView
                        android:id="@+id/korea_death_variation"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="-">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="일일확진자"
                    android:layout_weight="1">
                </TextView>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <TextView
                    android:id="@+id/daily_from_korea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="국내발생 -"
                    android:layout_weight="1">
                </TextView>

                <View
                    android:background="#bdbdbd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </View>

                <TextView
                    android:id="@+id/daily_from_oversea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="해외유입 -"
                    android:layout_weight="1">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/update_time_korea"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="국내현황 ----.--.--. --:-- 집계 기준">
            </TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>